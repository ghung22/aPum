<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="3dp"
    android:background="@color/black">
    <androidx.appcompat.widget.Toolbar android:id="@+id/menu_preview"
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="?popupTheme"/>

    <ImageView android:id="@+id/imgPreview"
        android:layout_width="match_parent" android:layout_height="0dip"
        android:layout_gravity="center|fill" android:layout_weight="2"/>
</LinearLayout>